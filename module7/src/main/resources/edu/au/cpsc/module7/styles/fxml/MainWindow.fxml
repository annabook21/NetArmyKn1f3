<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourname.alwaysdns.controllers.MainWindowController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="settingsMenuItem" mnemonicParsing="false" onAction="#handleShowSettings" text="Settings...">
                            <accelerator><KeyCodeCombination alt="UP" code="COMMA" control="DOWN" meta="UP" shift="UP" shortcut="UP" /></accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="exportMenuItem" mnemonicParsing="false" onAction="#handleSaveResults" text="Export Results...">
                            <accelerator><KeyCodeCombination alt="UP" code="E" control="DOWN" meta="UP" shift="UP" shortcut="UP" /></accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit">
                            <accelerator><KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" /></accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Query">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleRunQueries" text="Run Queries">
                            <accelerator><KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" /></accelerator>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#handleClearResults" text="Clear Results">
                            <accelerator><KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP" /></accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="About AlwaysDNS" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <VBox spacing="15.0" BorderPane.alignment="CENTER">
            <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>

            <!-- Input Section -->
            <VBox spacing="10.0" styleClass="input-section">
                <Label text="Domain Query Configuration" styleClass="section-header" />

                <GridPane hgap="15.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                        <ColumnConstraints hgrow="NEVER" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                    </rowConstraints>

                    <Label text="Domain:" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                    <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <TextField fx:id="domainTextField" promptText="Enter domain name (e.g., google.com, amazon.com)" HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="historyComboBox" promptText="Recent..." prefWidth="120.0" />
                    </HBox>

                    <Button fx:id="runButton" mnemonicParsing="false" onAction="#handleRunQueries" text="Run Queries"
                            prefWidth="100.0" styleClass="primary-button" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                    <Label text="Query Types:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                    <HBox alignment="CENTER_LEFT" spacing="25.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <CheckBox fx:id="digCheck" mnemonicParsing="false" selected="true" text="dig" />
                        <CheckBox fx:id="nslookupCheck" mnemonicParsing="false" selected="true" text="nslookup" />
                        <CheckBox fx:id="whoisCheck" mnemonicParsing="false" selected="true" text="whois" />
                        <CheckBox fx:id="hostCheck" mnemonicParsing="false" text="host" />
                    </HBox>

                    <HBox spacing="10.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" prefWidth="70.0" />
                        <Button fx:id="saveButton" mnemonicParsing="false" text="Save" prefWidth="70.0" disable="true" />
                    </HBox>
                </GridPane>
            </VBox>

            <!-- Progress Section -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" visible="false" />
                <Label fx:id="statusLabel" text="Ready" styleClass="status-label" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Results Section -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                <Label text="Query Results" styleClass="section-header" />

                <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
                    <TextArea fx:id="resultsTextArea" editable="false" wrapText="true"
                              promptText="DNS query results will appear here..."
                              styleClass="results-area" />
                </ScrollPane>
            </VBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="status-bar">
            <padding><Insets bottom="5.0" left="10.0" right="10.0" top="5.0" /></padding>
            <Label text="AlwaysDNS v1.0" styleClass="app-info" />
            <Region HBox.hgrow="ALWAYS" />
            <Label text="Ready to query DNS records" styleClass="status-info" />
        </HBox>
    </bottom>
</BorderPane>