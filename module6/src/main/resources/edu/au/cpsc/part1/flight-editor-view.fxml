<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="edu.au.cpsc.part1.FlightEditorViewController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Flight Designator:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="designatorField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200.0"/>

    <Label text="Departure Airport:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="departureAirportField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Departure Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="departureTimeField" promptText="HH:mm" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Arrival Airport:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="arrivalAirportField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Arrival Time:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="arrivalTimeField" promptText="HH:mm" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Days of Week:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <HBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="1">
        <ToggleButton fx:id="mondayToggle" text="M"/>
        <ToggleButton fx:id="tuesdayToggle" text="T"/>
        <ToggleButton fx:id="wednesdayToggle" text="W"/>
        <ToggleButton fx:id="thursdayToggle" text="R"/>
        <ToggleButton fx:id="fridayToggle" text="F"/>
        <ToggleButton fx:id="saturdayToggle" text="S"/>
        <ToggleButton fx:id="sundayToggle" text="U"/>
    </HBox>

    <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1" alignment="CENTER_LEFT">
        <Button fx:id="addUpdateButton" text="Add" onAction="#handleAddUpdateClick"/>
        <Button fx:id="newButton" text="New" onAction="#handleNewClick"/>
        <Button fx:id="deleteButton" text="Delete" onAction="#handleDeleteClick"/>
    </HBox>
</GridPane>
